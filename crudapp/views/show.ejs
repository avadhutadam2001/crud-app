<!DOCTYPE html>
<html>
<head>
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css">
   
</head>
<body class="bg-primary p-2 text-white bg-opacity-50">
    <div class="container"> <br><br>
        <div>
            <p> <a href="/" name="go back" value="Go to Add Product" class="btn btn-secondary"> Go to Add Product </a>
            </p>
        </div>
        <table class="table table-border table-light text-black table-bordered text-center shadow" ><br>
            <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Product Brand</th>
            <th>Product Category</th>
            <th>Product Price</th>
            <th>Product Delete</th>
            <th>Product Update</th>
            </tr>
            
            <% products.forEach(function(product){ %>
                <tr>
                    <td> <%=product._id %></td>
                    <td> <%=product.name %></td>
                    <td> <%=product.brand %></td>
                    <td> <%=product.category %></td>
                    <td> <%=product.price %></td>
                    <td> <a href="/delete/<%=product._id %>" class="btn btn-danger">delete</a> </td>
                    <td> <a href="/edit/<%=product._id %>" class="btn btn-success">edit</a> </td>

                </tr>
            <% }) %>
        
        </table>
    </div>
</body>
</html>